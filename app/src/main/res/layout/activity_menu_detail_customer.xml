<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    tools:context=".Activity.MenuDetailCustomerActivity">

    <include
        android:id="@+id/toolbar_lay"
        layout="@layout/toolbar_customer_cataloge_layout" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/toolbar_lay"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/img"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_270sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            app:cardCornerRadius="5dp"
            app:cardElevation="@dimen/_10ssp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/itemImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/pricetag"
                        android:gravity="center"
                        android:text="â‚¹126.0"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvPrice"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_toRightOf="@+id/tvPrice"
                        android:textColor="@color/colorGrey1"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tvDiscountPer"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:background="@drawable/discount_lay"
                    android:gravity="center"
                    android:text="30%"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone" />


                <ImageView
                    android:id="@+id/foodType"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:background="@color/colorWhite"
                    android:scaleType="fitXY"
                    android:visibility="gone" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tv"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_below="@id/img"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="@dimen/_10ssp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:layout_gravity="center_horizontal|center"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:visibility="gone"
                    android:textSize="@dimen/_10ssp"
                    android:layout_gravity="center_horizontal|center"
                    android:fontFamily="@font/calibri_regular"
                    android:ellipsize="end"
                    />

                <TextView
                    android:id="@+id/button_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDesc"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:textSize="@dimen/_14ssp" />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/tv"
            android:layout_alignParentBottom="true"
            android:background="@drawable/corner_bg"
            android:backgroundTint="#FFFDFD"
            android:elevation="@dimen/_50ssp">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="-15dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quantity"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Volume"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10ssp"
                android:orientation="horizontal"
                android:padding="@dimen/_10ssp"
                android:weightSum="2">


                <TextView
                    android:id="@+id/tvAddtoCart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/addcart_drawable"
                    android:elevation="@dimen/_10ssp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="Add Qty"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:visibility="gone" />


                <LinearLayout
                    android:id="@+id/r_addcart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/addcart_drawable"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:weightSum="2">


                    <TextView
                        android:id="@+id/count"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:elevation="@dimen/_10ssp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:maxLines="2"
                        android:padding="5dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorGreyDark"
                        android:elevation="@dimen/_10ssp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Qty"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Spinner
                        android:id="@+id/spinner_variant"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"
                        android:background="@drawable/addcart_drawable"
                        android:gravity="center|center_horizontal"
                        android:textAlignment="center" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/ll1"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="@dimen/_10ssp"
                android:outlineSpotShadowColor="@color/colorRed"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/_5ssp"
                app:cardElevation="@dimen/_5ssp"
                app:cardUseCompatPadding="true">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorRed"
                    android:elevation="@dimen/_10ssp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="Continue Shopping"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>


        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/btnGotoCart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@color/colorGreen">

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_16ssp"
            android:layout_margin="@dimen/_5sdp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/cart_btnbackground"
            android:text="View Cart"/>

    </RelativeLayout>



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loader"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        app:lottie_autoPlay="true"
        android:layout_centerInParent="true"
        app:lottie_fileName="loading_app.json"
        app:lottie_loop="true"
         />

    <ProgressBar
        android:id="@+id/progress_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone"/>

</RelativeLayout>
