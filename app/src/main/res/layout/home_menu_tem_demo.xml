<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_170sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cat_lay"
    android:layout_marginStart="-10dp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:elevation="@dimen/_10ssp"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        android:padding="@dimen/_10ssp"
        app:cardCornerRadius="@dimen/_5ssp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

<!--            <androidx.cardview.widget.CardView-->
<!--                android:id="@+id/imgCard"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:layout_marginTop="@dimen/_15ssp"-->
<!--                app:cardElevation="10dp"-->
<!--                app:cardCornerRadius="@dimen/_5sdp">-->

<!--                <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent">-->

<!--                    <ImageView-->
<!--                        android:id="@+id/imgCategory"-->
<!--                        android:layout_width="@dimen/_120sdp"-->
<!--                        android:layout_height="@dimen/_120sdp"-->
<!--                        android:layout_centerHorizontal="true"-->
<!--                        android:padding="@dimen/_5ssp"-->
<!--                        android:scaleType="fitXY"-->
<!--                        android:src="@mipmap/aaijee" />-->

                    <TextView
                        android:id="@+id/tvDiscountPrice"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@drawable/discount_lay"
                        android:gravity="center"
                        android:text="30%"
                        android:visibility="gone"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_10ssp" />

<!--                </FrameLayout>-->
<!--            </androidx.cardview.widget.CardView>-->


            <ImageView
                android:id="@+id/imgCategory"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_5ssp"
                android:scaleType="fitXY"
                android:layout_marginTop="@dimen/_10ssp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/aaijee" />

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgCard"
                android:maxLines="1"
                android:padding="@dimen/_5ssp"
                android:text="product name"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price : "
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹126.0"
                    android:textStyle="bold"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/tvDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvPrice"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/_1ssp"
                    android:text=" 140"
                    android:textColor="@color/colorGrey1"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />


            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/tvAddtoCart"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_10ssp"
                app:cardElevation="@dimen/_5ssp"
                android:outlineSpotShadowColor="@color/colorRed"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/_5ssp"
                app:cardUseCompatPadding="true">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorRed"
                    android:elevation="@dimen/_10ssp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="ADD"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/r_addcart"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_10ssp"
                app:cardElevation="@dimen/_5ssp"
                android:outlineSpotShadowColor="@color/colorRed"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/_5ssp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorRed"
                        android:elevation="@dimen/_10ssp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center|end"
                        android:text="Qty : "
                        android:padding="2dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/count"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="2dp"
                        android:background="@color/colorRed"
                        android:elevation="@dimen/_10ssp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="start|center"
                        android:inputType="number"
                        android:maxLines="2"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>






</RelativeLayout>