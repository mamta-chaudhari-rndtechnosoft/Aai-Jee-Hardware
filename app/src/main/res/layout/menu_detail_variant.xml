<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_food"
        android:layout_weight="0.5"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tvVariant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:visibility="gone"
        android:textColor="@color/colorGreyDark"
        android:text="regular"
        android:gravity="center"
        android:textSize="@dimen/_12ssp"/>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_below="@id/tvVariant"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:text="233"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/_12ssp"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="horizontal">


    <TextView
        android:layout_below="@id/tvPrice"
        android:id="@+id/tvMinus"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:textSize="@dimen/_14ssp"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_decrement" />

    <TextView
        android:id="@+id/tvQty"
        android:layout_below="@id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="0"
        android:textSize="@dimen/_14ssp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:textColor="@color/colorBlack"
        android:layout_toEndOf="@id/tvMinus"
        android:layout_toStartOf="@id/tvPlus"/>

    <TextView
        android:layout_below="@id/tvPrice"
        android:id="@+id/tvPlus"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:textStyle="bold"
        android:textSize="@dimen/_14ssp"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_increment" />
</LinearLayout>
</LinearLayout>
</LinearLayout>