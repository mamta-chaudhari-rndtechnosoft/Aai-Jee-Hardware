<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="center_vertical"
    android:background="@drawable/header_bg">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_appLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:elevation="@dimen/_10ssp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:src="@mipmap/aaijee" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_appLogo"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/imageView_appLogo"
        android:layout_toRightOf="@+id/imageView_appLogo"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:visibility="gone"
        android:layout_below="@+id/textView"
        android:text="@string/app_sub_name"
        android:textColor="@color/colorBlack"
        android:textSize="12dp" />


</RelativeLayout>
